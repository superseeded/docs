{
  "openapi": "3.1.0",
  "info": {
    "title": "EvergreenConnect API",
    "description": "API for matching pot sizes and checking system status",
    "license": {
      "name": "MIT"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8000"
    }
  ],
  "paths": {
    "/": {
      "get": {
        "summary": "API Status",
        "description": "Returns the status of the API",
        "responses": {
          "200": {
            "description": "Status response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "ok"
                    },
                    "service": {
                      "type": "string",
                      "example": "Pot Size Matcher API"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/resolve/specs": {
      "post": {
        "summary": "Resolve Specs",
        "description": "Match pot sizes from a list of strings and return full hierarchy data",
        "security": [
          {
            "ApiKeyAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/MatchRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Match results with resolved hierarchy data",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MatchResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - API Key missing"
          },
          "403": {
            "description": "Forbidden - Invalid API Key"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "MatchRequest": {
        "type": "object",
        "required": [
          "strings"
        ],
        "properties": {
          "strings": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "example": ["140mm", "20cm pot", "P14"]
          }
        }
      },
      "MatchResponse": {
        "type": "object",
        "properties": {
          "results": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "original": {
                  "type": "string",
                  "example": "140mm"
                },
                "hierarchy_id": {
                  "type": "string",
                  "example": "140"
                },
                "resolved": {
                  "type": "object",
                  "nullable": true,
                  "description": "The full object from Growth Equivalent Hierarchy.json",
                  "example": {
                    "id": "140",
                    "name": "140mm",
                    "volume": 1.4
                  }
                },
                "note": {
                  "type": "string",
                  "nullable": true,
                  "example": "Exact match found"
                }
              }
            }
          }
        }
      }
    },
    "securitySchemes": {
      "ApiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "X-API-Key"
      }
    }
  }
}
